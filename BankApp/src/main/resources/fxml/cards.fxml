<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="border-pane" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rumos.rumosbank.bankapp.controllers.AccountController">
   <left>
       <VBox styleClass="vbox" stylesheets="@../css/navbar.css" BorderPane.alignment="CENTER">
           <Button mnemonicParsing="false" onAction="#onAccountsButtonClick" styleClass="vbox_side_bar_button" text="Accounts" />
           <Button mnemonicParsing="false" onAction="#onEditProfileButtonClick" styleClass="vbox_side_bar_button" text="Profile" />
           <Button mnemonicParsing="false" onAction="#onChangePasswordButtonClick" styleClass="vbox_side_bar_button" text="Password" />
           <Button mnemonicParsing="false" onAction="#onLogoutButtonClick" styleClass="vbox_side_bar_button" text="Logout" />
       </VBox>
   </left>
   <center>
       <AnchorPane stylesheets="@../css/accounts.css" BorderPane.alignment="CENTER">
            <TableView fx:id="movements_table_view" layoutX="38.0" layoutY="53.0">
                <columns>
                    <TableColumn fx:id="movement_type" text="Type" />
                    <TableColumn fx:id="movement_amount" text="Amount" />
                    <TableColumn fx:id="movement_date" text="Date" />
                </columns>
            </TableView>
           <HBox layoutX="150.0" layoutY="268.0" prefHeight="33.0" prefWidth="188.0">
            <children>
               <Button mnemonicParsing="false" onAction="#onCreateNewDebitCardButtonClick" text="Create Debit Card" />
            </children>
           </HBox>
           <ChoiceBox fx:id="bank_accounts_choice_box" layoutX="113.0" layoutY="14.0" />
       </AnchorPane>
   </center>
</BorderPane>
