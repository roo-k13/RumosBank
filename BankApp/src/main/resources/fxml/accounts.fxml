<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="border-pane" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rumos.rumosbank.bankapp.controllers.AccountController">
   <left>
       <VBox styleClass="vbox" stylesheets="@../css/navbar.css" BorderPane.alignment="CENTER">
           <Button mnemonicParsing="false" onAction="#onAccountsButtonClick" styleClass="vbox_side_bar_button" text="Accounts" />
           <Button mnemonicParsing="false" onAction="#onCardsButtonClick" styleClass="vbox_side_bar_button" text="Cards" />
           <Button mnemonicParsing="false" onAction="#onChangePasswordButtonClick" styleClass="vbox_side_bar_button" text="Password" />
           <Button mnemonicParsing="false" onAction="#onLogoutButtonClick" styleClass="vbox_side_bar_button" text="Logout" />
         <Button mnemonicParsing="false" onAction="#onAccountsButtonClick" styleClass="vbox_side_bar_button" text="Accounts" />
       </VBox>
   </left>
   <center>
       <AnchorPane stylesheets="@../css/accounts.css" BorderPane.alignment="CENTER">
            <TableView fx:id="movements_table_view" editable="true" layoutX="38.0" layoutY="53.0" prefWidth="396.0" stylesheets="@../css/tables.css" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
                <columns>
                    <TableColumn fx:id="movement_type" text="Type" />
                    <TableColumn fx:id="movement_amount" text="Amount" />
                    <TableColumn fx:id="movement_date" text="Date" />
                </columns>
            </TableView>
           <VBox layoutX="38.0" layoutY="266.0" styleClass="transfer-vbox">
               <Label text="Make Transfer" />
               <HBox prefHeight="33.0" prefWidth="188.0">
                   <TextField fx:id="transfer_amount_text_field" prefWidth="149.0" promptText="Amount" />
                   <TextField fx:id="transfer_receiver_text_field" promptText="Account Number" />
                   <Button mnemonicParsing="false" onAction="#onMakeTransferButtonClick" text="Send" />
               </HBox>
           </VBox>
           <ChoiceBox fx:id="bank_accounts_choice_box" layoutX="88.0" layoutY="14.0" />
       </AnchorPane>
   </center>
</BorderPane>
