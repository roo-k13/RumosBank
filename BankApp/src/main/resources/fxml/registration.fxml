<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane
        styleClass="border-pane"
        stylesheets="@../css/main.css"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.rumos.rumosbank.bankapp.controllers.RegistrationController">
   <left>
       <VBox
               styleClass="vbox"
               stylesheets="@../css/navbar.css"
               BorderPane.alignment="CENTER">
           <Button
                   mnemonicParsing="false"
                   onAction="#onAccountsButtonClick"
                   styleClass="vbox_side_bar_button"
                   text="Accounts" />
           <Button
                   mnemonicParsing="false"
                   onAction="#onCardsButtonClick"
                   styleClass="vbox_side_bar_button"
                   text="Cards" />
           <Button
                   mnemonicParsing="false"
                   onAction="#onEditProfileButtonClick"
                   styleClass="vbox_side_bar_button"
                   text="Profile" />
           <Button
                   mnemonicParsing="false"
                   onAction="#onChangePasswordButtonClick"
                   styleClass="vbox_side_bar_button"
                   text="Password" />
           <Button
                   mnemonicParsing="false"
                   onAction="#onLogoutButtonClick"
                   styleClass="vbox_side_bar_button"
                   text="Logout" />
       </VBox>
   </left>
   <center>
        <VBox styleClass="vbox">
            <TextField
                    fx:id="first_name_text_field"
                    promptText="First Name" />
            <TextField
                    fx:id="last_name_text_field"
                    promptText="Last Name" />
            <DatePicker
                    fx:id="birthdate_date_picker"
                    promptText="Birthdate" />
            <TextField
                   fx:id="nif_text_field"
                   promptText="NIF" />
            <TextField
                   fx:id="phone_text_field"
                   promptText="Phone" />
            <TextField
                   fx:id="mobile_phone_text_field"
                   promptText="Mobile Phone" />
            <TextField
                   fx:id="profession_text_field"
                   promptText="Profession" />
            <TextField
                   fx:id="email_text_field"
                   promptText="Email" />
            <PasswordField
                    fx:id="insert_password_password_field"
                    promptText="Enter password" />
            <PasswordField
                    fx:id="confirm_password_password_field"
                    promptText="Confirm password" />
            <Button
                    mnemonicParsing="false"
                    onAction="#onRegisterButtonClick"
                    text="Register" />
         <Label
                 fx:id="feedback_message_label"
                 text="This is the feedback message label" />
         <stylesheets>
            <URL value="@../css/main.css" />
            <URL value="@../css/registration.css" />
         </stylesheets>
        </VBox>
   </center>
</BorderPane>